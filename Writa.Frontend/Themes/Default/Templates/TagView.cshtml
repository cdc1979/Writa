@using Writa.Models;
@using Writa.Frontend.Models
@using Newtonsoft.Json
@using Newtonsoft.Json.Converters

@inherits Writa.Frontend.Models.WritaViewPage

<div class="container" style="padding-top: 20px;">
    <div class="row">
        <div class="col-lg-12">
            
            <h1>@thispage.Tag</h1>
            @foreach (var f in thispage.RelatedPosts)
            {
                <div class="media">
                  <a class="pull-left" href="#">
                     <img class="media-object img-thumbnail" style="width: 150px;" src="@f.PostThumbnail?width=150&height=150&mode=crop" alt="@f.PostTitle">
                  </a>
                  <div class="media-body">
                    <h4 class="media-heading"><a href="/@f.PostSlug">@f.PostTitle</a></h4>
                    <p>@Html.Raw(f.PostSummary)</p>
                  </div>
                </div>
            }
        </div>
    </div>
</div>
