@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@section PageJavaScript
{
    <script type="text/javascript"src="@Url.Content("~/Scripts/writa-admin.js")"></script>
}

<div class="container" style="padding-top: 15em;">
    <div class="row">
        <div class="col-lg-1"></div>
<div class="col-lg-10">   
    <div class="well" >
        <h3>Writa - Control Panel</h3>
        <p>Please Login using the account you created when you first installed writa.</p>
    <form action="~/writa/login" method="post" id="loginform" class="form-horizontal" role="form">
         
                <div class="form-group">
                    <label for="email" class="col-lg-4 control-label">Your Email Address</label>
                    <div class="col-lg-8">
                        <input type="text" name="email" id="email" class="email required form-control" />
                    </div>
                </div>      
                <div class="form-group">
                    <label for="password" class="col-lg-4 control-label">Password</label>
                    <div class="col-lg-5">
                        <input type="password" name="password" id="password" class="required form-control" />
                        <span class="pull-right" style="font-size: 0.8em;"><a href="/writa/resetpassword">Reset Password</a></span>
                    </div>
                </div>  
                  
                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-8">
                        <input type="submit" value="Login" id="LoginButton" class="btn btn-primary" />
                        <div>@ViewBag.RegisterError</div>
                        <div id="registererrorarea"></div>
                        @Html.AntiForgeryToken()
                    </div>
                </div>                                                                                
        </form>
    </div>
    </div>
        <div class="col-lg-1"></div>
</div>

</div>