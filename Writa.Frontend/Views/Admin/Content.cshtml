@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@section PageJavaScript
{
    <link href="~/Scripts/EpicEditor-v0.2.2/themes/base/epiceditor.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Scripts/dropzone/css/basic.css" rel="stylesheet" />
    <link href="~/Scripts/datepicker/css/datepicker.css" rel="stylesheet" />
    
    <script src="~/Scripts/knockout-3.0.0.js"></script>
    <script src="~/Scripts/knockout.viewmodel.2.0.3.min.js"></script>
    <script src="~/Scripts/EpicEditor-v0.2.2/js/epiceditor.min.js"></script>
    <script src="~/Scripts/q.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/breeze.min.js"></script>
    <script src="~/Scripts/bootstrap-select.min.js"></script>
    <script src="~/Scripts/dropzone/dropzone.min.js"></script>
    <script src="~/Scripts/datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/writa-admin-content.js"></script>
}

<div class="container" style="width: 100%;">
    <div class="row">
        <div class="col-lg-3">
            <table class="table table-striped table-bordered">
            <thead>
                <tr><th>Your Posts <select class="pull-right" id="changelimit" data-bind="options: availablenums"></select> <select class="pull-right" id="resort"><option>Newest First</option><option>Oldest First</option><option>Alphanumeric</option></select> </th></tr>
            </thead>
            <tbody data-bind="foreach: posts">
                <tr>
                    <td style="width: 100%; padding: 10px;" class="item">
                        <button data-bind="attr: { postid: PostId }, clickBubble: false" class="showsettings btn btn-primary btn-sm pull-right"><i class="fa fa-gear"></i></button>
                        <div data-bind="attr: { postid: PostId }, click: $root.postClick">
                            <div data-bind="text: moment(PostCreated).format('L')"></div>
                            <div style="font-size: 0.9em;" data-bind="text: PostTitle"></div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        </div>
        <div class="col-lg-9">
            <div>
                <div class="pull-right">
                    <button data-bind="attr: { postid: myobj.PostId }, clickBubble: false" class="showsettings btn btn-primary pull-right"><i class="fa fa-gear"></i></button>
                    <button class="imagebrowser btn btn-primary"><i class="fa fa-camera"></i></button>
                </div>
                <input type="text" class="form-control" style="width: 90%;" id="posttitle" data-bind="value: myobj.PostTitle"/>
            </div>
            <div id="epiceditor"></div>
            <div class="clearfix">
                <input type="hidden" id="postid" data-bind="value: myobj.PostId" />
                <div data-bind="foreach: myobj.PostTags"><span class="btn btn-default btn-xs deletetag" data-bind="text:$data"></span></div>
                <input type="text" style="font-size: 0.8em; padding: 2px; border: 0px;" placeholder="Tag This Page" id="addtag" /><button id="addtagbutton" data-bind="attr: { postid: myobj.PostId }" class="btn btn-warning btn-xs"><i class="fa fa-plus"></i></button>
            <div class="pull-right">
                <a href="#" class="btn btn-success btn-sm" data-bind="attr: {postid:myobj.PostId}" id="updatepostbutton"><i class="fa fa-save"></i> Save Changes</a>
            </div>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12"></div>
    </div>
</div>