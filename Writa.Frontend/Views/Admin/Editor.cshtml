@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
@section PageJavaScript
{
    <link href="~/Scripts/codemirror-2.37/lib/codemirror.css" rel="stylesheet" />
    <link href="~/Scripts/codemirror-2.37/theme/cobalt.css" rel="stylesheet" />
    <link href="~/Scripts/dropzone/css/dropzone.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/codemirror-2.37/lib/codemirror.js"></script>
    <script src="~/Scripts/Markdown.Converter.js"></script>
    <script src="~/Scripts/dropzone/dropzone.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script type="text/javascript"src="@Url.Content("~/Scripts/writa-admin-editor.js")"></script>
    
}
<div class="container" style="width: 100%; height: 90%; min-height: 90%; background-color: rgba(255,255,255,0.9); color: #000;">
    <div class="row">
        <div class="col-lg-12" style="background-color: rgba(255,255,255,1); color: #000;">
            <input type="text" id="posttitle" name="posttitle" class="form-control col-lg-12" placeholder="Your Post Title" />
        </div>
    </div>
    <div class="row" style="min-height: 90%; height: 90%;">
        <div class="col-lg-6" style="background-color: rgba(255,255,255,1); border: 1px solid #000; min-height: 100%; height: 100%; color: #000; overflow:auto;">
            <textarea name="markdown" id="markdown"></textarea>
        </div>
        <div class="col-lg-6" style="min-height: 90%; height: 90%;">
            <div id="preview" style="overflow:auto;min-height: 100%; height: 100%;"></div>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-12" style="background-color: rgba(255,255,255,1); color: #000; ">
            <button class="pull-right btn btn-success" id="publishbutton">Publish</button>
        </div>
    </div>
</div>
