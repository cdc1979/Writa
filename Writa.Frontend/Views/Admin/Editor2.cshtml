@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
@section PageJavaScript
{

    <link href="~/Scripts/dropzone/css/basic.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Scripts/datepicker/css/datepicker.css" rel="stylesheet" />
    <link href="~/Scripts/EpicEditor-v0.2.2/themes/base/epiceditor.css" rel="stylesheet" />
    <script src="~/Scripts/dropzone/dropzone.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/EpicEditor-v0.2.2/js/epiceditor.min.js"></script>
    <script src="~/Scripts/datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript"src="@Url.Content("~/Scripts/writa-admin-editor2.js")"></script>
    
}
<div class="container" style="width: 100%; height: 90%; min-height: 90%;">
    <div class="row">
        <div class="col-lg-12">
            <input type="text" id="posttitle" value="@ViewBag.PostTitle" name="posttitle" class="form-control col-lg-12" placeholder="Your Post Title" />
        </div>
    </div>
    <div class="row" style="min-height: 90%; height: 90%;">
        <div class="col-lg-9">
            <div id="epiceditor"></div>
        </div>
        <div class="col-lg-3" style="padding-top: 10px;">
            
            <div class="well">
                <span>Schedule your post from </span><input type="text" id="poststartdate" placeholder="Schedule" value="@DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss")" />
            </div>

            <div class="panel panel-default">
              <div class="panel-heading">Upload Images <button class="pull-right imagebrowser btn btn-primary"><i class="fa fa-camera"></i></button></div>
              <div class="panel-body">
               <div id="dz" class="dropzone" style="border: 1px solid #000;"></div>
              </div>
            </div>
            
        </div>

    </div>
    <div class="row">
        <div class="col-lg-12">
            @if (ViewBag.New) {
                <div class="pull-right">
                    
                <button class="btn btn-success" id="publishbutton">Publish</button>
                    </div>
            }
            else {
            <button class="pull-right btn btn-success" id="editbutton">Save and Publish</button>    
            }
        </div>
    </div>
</div>
<input type="hidden" id="postid" value="@ViewBag.PostId" />

<!-- Modal -->
<div class="modal fade" id="donemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="donemodaltitle">Congratulations!</h4>
      </div>
      <div class="modal-body" id="donemodalbody">
          <p>Your post has been created as a draft.  You can now adjust your post and its settings by clicking into the content tab. </p>
          <div class="alert alert-info">
              <i class="fa fa-exclamation-circle"></i> Dont forget to set your post to Published so its visible on your blog.
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->